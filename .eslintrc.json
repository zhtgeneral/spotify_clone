{
	"extends": [
		"next/core-web-vitals",
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"tabWidth": 2,
				"useTabs": true,
				"semi": true,
				"quoteProps": "as-needed"
			}
		],
		"@typescript-eslint/no-unused-vars": [
			"error",
			{ "argsIgnorePattern": "^_" }
		],
		"@typescript-eslint/explicit-function-return-type": "off",
		"no-console": "warn"
	}
}
